<Window x:Class="Glovo.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Налаштування" Height="250" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Ім'я користувача:" Margin="0,0,0,5"/>
            <TextBox Name="UserNameTextBox" Height="30"/>

            <TextBlock Text="Оберіть роль:" Margin="0,10,0,5"/>
            <ComboBox Name="RoleComboBox" Height="30">
                <ComboBoxItem Content="Клієнт"/>
                <ComboBoxItem Content="Кур'єр"/>
                <ComboBoxItem Content="Ресторан"/>
                <ComboBoxItem Content="Адміністратор"/>
            </ComboBox>

            <Button Content="Зберегти" Height="30" Margin="0,10,0,0" Click="SaveSettings_Click"/>
        </StackPanel>
    </Grid>
</Window>

